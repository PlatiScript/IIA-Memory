{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">


                    <h1 class="text-center mb-3">Bienvenue sur Memory</h1>

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                        </div>
                    {% endif %}

                    <label for="inputUsername" class="mt-5">Nom d'utilisateur :</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                    <label for="inputPassword" class="mt-5">Mot de passe :</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                        <div class="checkbox mt-2 ">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                            </label>
                        </div>

                    <div class="row justify-content-center">
                        <div class="col-md-5">
                            <button class="btn btn-lg btn-success mt-5" type="submit">
                                <i class="fas fa-sign-in-alt"></i> Se connecter
                            </button>
                        </div>
                        <div class="col-md-4">
                            <a href="{{ url('app_register') }}"  class="btn btn-lg btn-primary mt-5">
                                    <i class="fas fa-user-plus"></i> S'inscrire
                            </a>
                        </div>

                </form>
            </div>
        </div>


    </div>

{% endblock %}
